<Window x:Class="Presentation.View.AssignTaskWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Presentation.View"
        mc:Ignorable="d"
        Title="AssignTaskWindow" Height="180" Width="400">
    <Grid>
        <Label Content="Assign Task" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="16"/>
        <TextBox HorizontalAlignment="Center" Text="{Binding Path=EmailAssignee, Mode=OneWayToSource}" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Margin="0,56,0,0"/>
        <Button Content="Assign Task" HorizontalAlignment="Center" Margin="0,110,0,0" VerticalAlignment="Top" Width="120" Click="Assign_Task_Button_Click" />
        <Label Content="Email Assignee:" HorizontalAlignment="Left" Margin="10,52,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
