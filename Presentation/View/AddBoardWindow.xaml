<Window x:Class="Presentation.View.AddBoardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Presentation.View"
        mc:Ignorable="d"
        Title="AddBoardWindow" Height="200" Width="400">
    <Grid>
        <Label Content="Add New Board" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="16"/>
        <TextBox HorizontalAlignment="Center" Text="{Binding Path=BoardName, Mode=OneWayToSource}" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Margin="0,56,0,0"/>
        <Button Content="Add Board" HorizontalAlignment="Center" Margin="0,111,0,0" VerticalAlignment="Top" Width="120" Click="Add_Board_Button_Click"/>
        <Label Content="Enter Board Name:" HorizontalAlignment="Left" Margin="10,52,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
